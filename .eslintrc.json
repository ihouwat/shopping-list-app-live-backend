{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "plugins": [
        "jsdoc"
    ],
    "extends": ["eslint:recommended", "plugin:jsdoc/recommended-typescript"],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "jsdoc/check-tag-names": [
            "error",
            {
                "definedTags": ["swagger"]
            }
        ]
    }
}
